<%- include ('../partials/header') %>

<div class="container">
    <h1 class="text-center">Edit comment</h1>
    <div style="width: 30%; margin: 40px auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-secondary btn-block">
            </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
</div>
<%- include ('../partials/footer') %>